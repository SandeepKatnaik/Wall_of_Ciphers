<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shape layer -->
    <item>
        <shape android:shape="rectangle">
            <!-- Define the properties of the shape -->
            <solid android:color="@color/black" /> <!-- Fill color -->
            <stroke
                android:width="2000dp"
                android:color="#000000" /> <!-- Border color -->
            <corners android:radius="100dp" /> <!-- Corner radius -->
        </shape>
    </item>
    <!-- Image layer -->
    <item>
        <bitmap
            android:src="@drawable/btn_bg"
            android:scaleType="centerCrop"
            android:gravity="center" />
    </item>
</layer-list>